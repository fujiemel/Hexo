<div class="sea-page-card-wrapper">
  <h1 class="sea-page-card-title">{{ page.title }}</h1>
  <div class="sea-article-content sea-doc">
    {{ render(page.content) }}
  </div>

  <div class="sea-anime-container">
    {% set animeList = load_config_data('bangumi') %}
    {% for anime in animeList %}
      <div class="sea-anime-item">
        <div class="sea-anime-cover-wrapper">
          <img class="sea-anime-cover" src="{{ anime.cover }}" alt="{{ anime.title }}" loading="lazy">
          <div class="sea-anime-status-badge sea-anime-status-{{ anime.status }}">
            {% if anime.status == 'watching' %} 正在追 {% elif anime.status == 'completed' %} 已看完 {% else %} 想看 {% endif %}
          </div>
        </div>
        <div class="sea-anime-info">
          <h3 class="sea-anime-title">
            <a href="{{ anime.link }}" target="_blank">{{ anime.title }}</a>
          </h3>
          <div class="sea-anime-meta">
            <span>{{ anime.year }}</span>
            <span>{{ anime.studio }}</span>
          </div>
          <div class="sea-anime-progress">
            <div class="sea-anime-progress-bar-bg">
              <div class="sea-anime-progress-bar" style="width: {{ (anime.progress / anime.totalEpisodes) * 100 }}%"></div>
            </div>
            <div class="sea-anime-progress-text">
              进度: {{ anime.progress }} / {{ anime.totalEpisodes }}
            </div>
          </div>
          <p class="sea-anime-desc">{{ anime.description }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.sea-anime-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 1.5rem;
  margin-top: 2rem;
}

.sea-anime-item {
  display: flex;
  background-color: var(--sea-bg-soft);
  border-radius: var(--sea-radius-lg);
  overflow: hidden;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  border: 1px solid var(--sea-border);
}

.sea-anime-item:hover {
  transform: translateY(-4px);
  box-shadow: var(--sea-shadow-md);
}

.sea-anime-cover-wrapper {
  position: relative;
  width: 120px;
  flex-shrink: 0;
}

.sea-anime-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.sea-anime-status-badge {
  position: absolute;
  top: 0;
  left: 0;
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
  color: #fff;
  border-bottom-right-radius: 0.5rem;
  z-index: 1;
}

.sea-anime-status-watching { background-color: var(--sea-primary); }
.sea-anime-status-completed { background-color: #10b981; }
.sea-anime-status-planned { background-color: #6b7280; }

.sea-anime-info {
  padding: 1rem;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  overflow: hidden;
}

.sea-anime-title {
  margin: 0;
  font-size: 1.1rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sea-anime-title a {
  color: var(--sea-text-main);
  text-decoration: none;
}

.sea-anime-title a:hover {
  color: var(--sea-primary);
}

.sea-anime-meta {
  font-size: 0.8rem;
  color: var(--sea-text-light);
  display: flex;
  gap: 0.75rem;
}

.sea-anime-progress {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.sea-anime-progress-bar-bg {
  height: 6px;
  background-color: var(--sea-border);
  border-radius: 3px;
  overflow: hidden;
}

.sea-anime-progress-bar {
  height: 100%;
  background-color: var(--sea-primary);
  border-radius: 3px;
}

.sea-anime-progress-text {
  font-size: 0.75rem;
  color: var(--sea-text-light);
}

.sea-anime-desc {
  margin: 0;
  font-size: 0.875rem;
  color: var(--sea-text-light);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

@media (max-width: 480px) {
  .sea-anime-item {
    flex-direction: column;
  }
  .sea-anime-cover-wrapper {
    width: 100%;
    height: 180px;
  }
}
</style>
